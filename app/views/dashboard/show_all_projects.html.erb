<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">Diploma Projects</div>
            <div class="panel-body informationPanel">
                <table class="table" class="display">
                    <thead>
                        <th style="text-align:left">Name</th>
                        <th>Number of students</th>
                        <th>Duration</th>
                        <th>Description</th>
                        <th>Proposing Teacher</th>
                        <th>Documentation</th>
                    </thead>
                    <tbody>
                        <% @projects.each do |project| %>
                            <tr>
                                <td><%= project.name %></td>
                                <td><%= project.max_students %></td>
                                <td><%= project.duration %> <%= project.time_span %></td>
                                <td><%= project.description %></td>
                                <td><%= project.teacher.name %></td>
                                <td>
                                    <% project.documents.each do |document| %>
                                        <%= link_to document.download_url do %>
                                            <%= truncate(document.file_file_name, length: 15) %>
                                        <% end %>
                                        |
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>