<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-3" style="text-align:center;">
        <% if current_user.personal_information && current_user.personal_information.avatar %>
         <%= image_tag current_user.personal_information.avatar.url, size: "200x160" %>
        <% else %>
         <%= image_tag @personal_information.avatar.url, size: "200x160" %>
        <% end %>
      </div>
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="panel panel-default">
        <div class="panel-heading">Current status</div>
        <div class="panel-body welcome-panel">
          You are currently enlisted to TODO - add mentor
          <br/>
          Your Diploma title is:
          <br/>
          Uploaded documents until now: <%= current_user.documents.count %>
          <br/>
          Next meeting:
          <br/>
          Received emails:
          <br/>
        </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
    <!-- <div class="col-md-8">
    </div> -->
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <%= form_for Document.new, :url => documents_path, html: { multipart: true, class: 'fileupload' } do |f| %>  
            <span class="btn addDocuments fileinput-button pull-right ui-btn-inline">
              <i class="fa fa-plus" aria-hidden="true"></i>
              <span>Adauga fisiere...</span>
              <input name="document[file]" multiple="" type="file">
              <%= f.hidden_field :user_id, :value => current_user.id %>
            </span>
            </div>
            <div class="panel-body welcome-panel">
              <% if current_user.documents.any? %>
               <table style="width:100%">
                <th>Denumire</th> 
                <th>Dimensiune</th>
                <th>Actiuni</th> 
                <% current_user.documents.each do |document| %>
                    <tr>
                      <td><%= document.file_file_name %></td>
                      <td><%= document.file_file_size.to_f / 1000 %> kB</td>
                      <td><%= link_to document.download_url do %>
                        <i class="fa fa-cloud-download" aria-hidden="true"></i>
                        <% end %>
                      </td>
                  </tr>
                <% end %>
                </table>
              <% else %>            
               <p class="uploadedFiles"> Nu ai niciun document incarcat.</p>
            <% end %>
            <hr class="uploadHr hidden">
            <br class="uploadHr hidden"/>
            <%= image_tag 'file.png', size: "180x90", class: 'uploadImage hidden' %>
            <hr class="uploadHr hidden">
            <br class="uploadHr hidden"/>
              <button type="submit" class="btn btn-primary start hidden startUpload">
                <i class="fa fa-cloud-upload" aria-hidden="true"></i>
                <span>Start incarcare</span>
              </button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="panel panel-default">
        <div class="panel-heading welcome-panel">
        Calendar sedinte
        </div>
        <div class="panel-body calendar-panel">
          <div class="hidden" id="student_id"><%= current_user.id %></div>
          <div class="hidden" id="teacher_id"><%= current_user.id %></div>
          <div id="calendar"></div>
        </div>
      </div>
    </div>
  </div>
  <!-- <div class="col-md-4">
  </div> -->
<% else %>
  <div class="panel panel-default welcome-panel singUpPanel" style='text-align:center;'>
    <h1>Thesis Manager App</h1>
    <br/>
    <br/>
    <br/>
    <%= link_to "Sign up now!",  new_user_registration_path ,
                                class: "btn btn-large btn-primary addDocuments singUp" %>
  </div>
<% end %>