<div class="col-md-12">
	<div class="panel panel-default students">
	  	<div class="panel-heading clearfix">Diploma Project Selection 
		</div>
	  	<div class="panel-body informationPanel">
			<table class="table settingsTable">
				<th style="text-align:left">Name</th>
				<th>Description</th>
				<th style='text-align:center;'>Active</th>
				<% @selection_modes.each do |mode| %>
					<tr id="selection_<%=mode.id%>">
						<td><%= mode.name.humanize %></td>
						<td><%= mode.description %></td>
						<td style='text-align:center;'><%= check_box "mode", "active", {checked: mode.active, disabled: mode.active, class: 'toggleStatus', id: mode.id }%></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
