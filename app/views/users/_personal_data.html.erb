<div class="row">
  <div class="col-md-12"></div>
</div>
<div class="row">
  <div class="col-md-4" style='text-align: center;'>
    <br/>
    <%= image_tag current_user.personal_information.avatar.url, size: "200x160" %>
    <br/>
    <hr>
    <%= form_for current_user.personal_information, :html => { :multipart => true, :id => "fileupload" }, url: @url, remote: true do |f| %>
      <%= f.file_field :avatar %>
      <br/>
      <%= f.submit 'Update avatar', :class => 'btn btn-info' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        Personal Information
      </div>
      <div class="panel-body informationPanel">
        <%= form_for current_user.personal_information, url: @url, remote: true do |f| %>
          <div class="col-md-6">
          <div class="form-group">
            <%= f.label :first_name, class: 'control-label' %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= f.label :last_name, class: 'control-label' %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= f.label :age, class: 'control-label' %>
            <%= f.text_field :age, class: 'form-control' %>
          </div>

            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :code, class: 'control-label' %>
              <% if current_user.personal_information.code.blank? %>
                <%= f.text_field :code, class: 'form-control' %>
              <% else %>
                <br/>
                <%= current_user.personal_information.code %>
              <% end %>
            </div>

            <% if current_user.student? %>
              <div class="form-group">
                <%= f.label :year, class: 'control-label' %>
                <% if current_user.personal_information.year.blank? %>
                  <%= f.select :year, options_for_select([['1',1],['2',2],['3',3],['4',4]]), {:prompt => 'Please Select'},  { class: 'form-control' } %>
                <% else %>
                  <br />
                  <%= current_user.personal_information.year %>
                <% end %>
              </div>
            <% end %>
             <div class="form-group">
              <%= f.label :faculty, class: 'control-label' %>
              <% if current_user.personal_information.section_id.blank? %>
                <%= collection_select :faculty, :id, Faculty.all.order(:name), :id,:name, {:include_blank => 'Please Select'}, class: 'form-control' %>
              <% else %>
                <br />
                <%= Faculty.find_by(id: Section.find_by(id: current_user.personal_information.section_id)).name %>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :section, class: 'control-label' %>
              <% if current_user.personal_information.section_id.blank? %>
                <%= f.collection_select :section_id, Section.all, :id, :name, {:include_blank => 'Please Select'}, class: 'form-control' %>
              <% else %>
                <br / >
                <%= Section.find_by(id: current_user.personal_information.section_id).name %>
              <% end %>
              
            </div>
          </div>
          <br />
          <div style="text-align: center">
          <%= f.submit 'Save data', :class => 'btn btn-info addDocuments' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>